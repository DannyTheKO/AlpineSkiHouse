@model AlpineSkiHouse.Models.Ticket;

@{
	ViewData["Title"] = "Edit Ticket";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>@ViewData["Title"]</h1>

<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div> @*When user input is invalid, text will show up as invalid input*@
			<div class="form-group">
				<label asp-for="Id" class="form-label">ID Ticket</label>
				<input asp-for="Id" class="form-control"/>
				<span asp-validation-for="Id" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="CustomerName" class="form-label">Customer Name</label>
				<input asp-for="CustomerName" class="form-control"/>
				<span asp-validation-for="CustomerName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="RoomNumber" class="form-label">Room Number</label>
				<input asp-for="RoomNumber" class="form-control" />
				<span asp-validation-for="RoomNumber" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="CheckIn" class="form-label">Check In</label>
				<input asp-for="CheckIn" class="form-control" />
				<span asp-validation-for="CheckIn" class="text-danger"></span>
			</div>


			<div class="form-group">
				<label asp-for="CheckOut" class="form-label">Check Out</label>
				<input asp-for="CheckOut" class="form-control" />
				<span asp-validation-for="CheckOut" class="text-danger"></span>
			</div>

			<div class="btn-group">
				<input type="submit" class="btn btn-primary" placeholder="Edit"/>
				<a asp-action="Index" class="btn btn-secondary">Cancel</a>
			</div>
		</form>
	</div>
</div>
